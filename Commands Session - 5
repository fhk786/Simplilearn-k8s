 nano cronjob.yaml 
 kubectl apply -f cronjob.yaml 
 nano cronjob.yaml 


apiVersion: batch/v1
kind: CronJob
metadata:
  name: cronjob-hello
spec:
  schedule: "*/1 * * * *"
  jobTemplate:
    spec:
      ttlSecondsAfterFinished:  60
      template:
        spec:
          containers:
          - name: cronjob-ctr
            image: busybox
            args:
            - /bin/sh
            - -c
            - echo Hello World!
          restartPolicy: OnFailure


 kubectl apply -f cronjob.yaml 
 kubectl get job -w
 kubectl get pod -w | grep cron
 kubectl get job 
 kubectl get cronjob 
